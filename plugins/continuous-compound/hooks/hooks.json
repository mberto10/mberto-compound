{
  "SessionStart": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "echo \"[$(date)] SessionStart hook fired\" >> /tmp/claude-hooks-debug.log && bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/program-load-context.sh",
          "timeout": 30
        }
      ]
    }
  ],
  "Stop": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "echo \"[$(date)] Stop hook fired\" >> /tmp/claude-hooks-debug.log && bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/milestone-detector.sh",
          "timeout": 10
        }
      ]
    }
  ],
  "PreCompact": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "echo \"[$(date)] PreCompact hook fired\" >> /tmp/claude-hooks-debug.log && bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/program-save-state.sh",
          "timeout": 60
        }
      ]
    }
  ]
}
